            <td>
                @Html.DisplayFor(modelItem => item.RollNo);
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nrc);
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email);
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
