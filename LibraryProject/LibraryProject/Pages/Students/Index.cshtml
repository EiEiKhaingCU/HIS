    </form><table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Name);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].RollNo);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Nrc);
